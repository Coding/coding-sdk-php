{
    "name": "coding/sdk",
    "description": "CODING.net SDK for PHP",
    "type": "library",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.16",
        "phpmd/phpmd": "^2.10",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": { "Coding\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Coding\\Tests\\": "tests/" }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"if (is_dir('.git/hooks/')) {copy('.git-pre-commit', '.git/hooks/pre-commit'); chmod('.git/hooks/pre-commit', 0755);}\""
        ]
    }
}
